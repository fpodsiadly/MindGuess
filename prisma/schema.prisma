generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TraitValue {
  TRUE
  FALSE
  UNKNOWN
}

model Trait {
  id        String         @id @default(cuid())
  key       String         @unique
  question  String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  values    PersonTrait[]
}

model Person {
  id        String         @id @default(cuid())
  name      String         @unique
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  traits    PersonTrait[]
}

model PersonTrait {
  id        String     @id @default(cuid())
  personId  String
  traitId   String
  value     TraitValue

  person    Person     @relation(fields: [personId], references: [id], onDelete: Cascade)
  trait     Trait      @relation(fields: [traitId], references: [id], onDelete: Cascade)

  @@unique([personId, traitId])
  @@index([traitId])
}
